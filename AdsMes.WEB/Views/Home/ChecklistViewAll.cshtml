<table class="table">
    <tr>
        <th width="Auto">
            @Html.DisplayName("ID")
        </th>
        <th width="Auto">            
            @Html.DisplayName("Дата и Время")
        </th>
        <th width="Auto">
            @Html.DisplayName("Отметка о соответствии")
        </th>
        <th width="Auto">
            @Html.DisplayName("Расслоение вверху")
        </th>
        <th width="Auto">
            @Html.DisplayName("Расслоение  внизу")
